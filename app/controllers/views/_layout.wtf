<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>[pagevar get title [config :app_name]]</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
%(
set ie_compat {

    <!--[if lte IE 8]>
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css">
    <!--<![endif]-->

    <!--[if lt IE 9]>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.js"></script>
    <![endif]-->
}
set ie_compat ""
%)
    $ie_compat

[my include_stylesheet _layout.css]
% foreach ss [pagevar get styles {}] {
    [my include_stylesheet $ss]
% }

</head>

<body>

<div class='pure-g'>
% if {[page fetch header header]} {
  <div class='pure-u-1-1'><header>$header</header></div>
% }

%(
  page fetch nav nav
  page fetch main main
  page fetch sidebar sidebar
  if {[info exists main]} {
      if {[info exists nav] && [info exists sidebar]} {
          set main_class "pure-u-14-24"
          set sidebar_class "pure-u-5-24"
          set nav_class "pure-u-5-24"
      } elseif {[info exists nav]} {
          set main_class "pure-u-19-24"
          set nav_class "pure-u-5-24"
      } elseif {[info exists sidebar]} {
          set main_class "pure-u-19-24"
          set sidebar_class "pure-u-5-24"
      } else {
          set main_class "pure-u-1-1"
      }
  } else {
      if {[info exists nav] && [info exists sidebar]} {
          set sidebar_class "pure-u-1-2"
          set nav_class "pure-u-1-2"
      } elseif {[info exists nav]} {
          set nav_class "pure-u-1-1"
          set sidebar_class "pure-u-1-1"
      }
  }
%)

% if {[info exists nav]} {
  <div class='$nav_class wf_nav'>
    <div class='wf_box'><nav>$nav</nav></div>
  </div>
% }

% if {[info exists main]} {
  <div class=$main_class>
    <div class='wf_box'><main>$main</main></div>
  </div>
% }

% if {[info exists sidebar]} {
  <div class='$sidebar_class'>
    <div class='wf_box'><aside>$sidebar</aside></div>
  </div>
% }

</div>

% if {[page fetch footer footer]} {
  <footer>$footer</footer>
% }

</body>
</html>
